# Polygon.io API (for real-time stock data)
# Get your free API key at: https://polygon.io
POLYGON_API_KEY=your_polygon_api_key_here

# Beehiiv API (for email subscriptions)
# Get your API key from: https://app.beehiiv.com/settings/integrations
BEEHIIV_API_KEY=your_beehiiv_api_key_here
BEEHIIV_PUBLICATION_ID=your_publication_id_here

# Google Analytics (optional)
# Get your measurement ID from: https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel KV (for brief archive storage)
# These are automatically set by Vercel when you create a KV database
# No manual configuration needed - just create KV database in Vercel dashboard
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Gumloop API (optional - for automated brief generation)
GUMLOOP_API_KEY=your_gumloop_api_key_here
GUMLOOP_ENDPOINT=your_gumloop_endpoint_here
